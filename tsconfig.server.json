{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": "./dist",
        "noEmit": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowImportingTsExtensions": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "api/**/*",
        "shared/**/*",
        "api/core/Logger.ts",
        "api/core/Database.ts"
    ],
    "exclude": [
        "src/**/*",
        "**/*.test.ts",
        "vite.config.ts"
    ]
}