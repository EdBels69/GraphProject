generator client {
  provider = "prisma-client"
  output   = "../src/core/prisma"
}

datasource db {
  provider = "sqlite"
}

model ResearchJob {
  id                String   @id
  topic             String
  mode              String
  status            String
  progress          Int
  error             String?
  queries           String   // Stored as JSON string
  articlesFound     Int
  articlesProcessed Int
  startTime         DateTime?
  endTime           DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  articles          Article[]
  
  // JSON fields for complex data
  includedIds       String? // JSON array
  excludedIds       String? // JSON array
  exclusionReasons  String? // JSON object
  reviewText        String?
  
  graphId           String?
  graph             Graph?  @relation(fields: [graphId], references: [id])
}

model Article {
  id              String   @id
  jobId           String
  job             ResearchJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  doi             String?
  title           String
  authors         String   // JSON array
  year            Int?
  abstract        String?
  url             String?
  pdfUrl          String?
  source          String
  status          String
  
  // Screening
  screeningStatus String?
  extractedData   String? // JSON object
  
  // Relations/Graph
  entities        String? // JSON object (extracted entities)
  relations       String? // JSON object (extracted relations)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Graph {
  id          String   @id
  name        String
  description String?
  version     String   @default("2.0")
  directed    Boolean  @default(false)
  
  // JSON Data
  nodes       String   // JSON
  edges       String   // JSON
  metrics     String?  // JSON
  sources     String?  // JSON
  metadata    String?  // JSON
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  jobs        ResearchJob[]
}
